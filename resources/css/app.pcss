@tailwind base;
@tailwind components;
@tailwind utilities;

details summary::-webkit-details-marker {
    display: none;
}

textarea {
    resize: none;
}

.transition-height {
    transition: height 250ms;
}

.transition-opacity {
    transition: opacity 150ms;
}

.article pre {
    @apply flex;
    @apply w-full;
    @apply overflow-y-hidden;
    @apply overflow-x-auto;
    @apply border-4;
    @apply border-gray-100;
    @apply py-4;
}

.article * + p,
.article * + blockquote,
.article * + pre,
.article * + h1,
.article * + h2,
.article * + h3 {
    @apply mt-4;
}

.article pre + blockquote {
    @apply mt-0;
}

.article ol {
    @apply list-decimal;
    @apply ml-8;
    @apply mt-4;
}

.article ul {
    @apply list-disc;
    @apply ml-8;
    @apply mt-4;
}

.hljs {
    @apply leading-normal;
    @apply font-mono;
    @apply px-4;
    @apply overflow-visible;
}

.article a {
    @apply text-blue-500;
    @apply underline;
}
